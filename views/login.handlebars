<div id="container">
  <div id="loginForm" class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body">
        {{!-- <img class="logo" src="/img/logo.png"> --}}
        <h3 class="text-center">Account Login</h3>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="userEmail">Email</label>
            <input id="userEmail" type="email" name="email" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="userPassword">Password</label>
            <input id="userPassword" type="password" name="password" class="form-control" required>
          </div>
          <button id="logsubmit" class="btn btn-primary">Submit</button>
        </form>
        <br>
        <a href="/register">Register</a>
      </div>
    </div>
  </div>
</div>

